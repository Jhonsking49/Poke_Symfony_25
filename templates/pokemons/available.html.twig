{% extends 'base.html.twig' %}

{% block title %}Pokémon Disponible{% endblock %}

{% block body %}
<style>
    .pokemon-container {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        text-align: center;
    }

    .pokemon-image {
        width: 200px;
        height: 200px;
        object-fit: contain;
        margin: 20px 0;
    }

    .pokemon-info {
        margin: 20px 0;
    }

    .buttons-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-capture {
        background-color: #FF5722;
        color: white;
        border: 2px solid #F4511E;
    }

    .btn-skip {
        background-color: #6c757d;
        color: white;
        border: 2px solid #5a6268;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>

<div class="pokemon-container">
    <h1>¡Un Pokémon salvaje apareció!</h1>
    
    <img src="{{ pokemon.img }}" alt="{{ pokemon.pokeplantilla.name }}" class="pokemon-image">
    
    <div class="pokemon-info">
        <h2>{{ pokemon.pokeplantilla.name|capitalize }}</h2>
        <p>Nivel: {{ pokemon.level }}</p>
        <p>Fuerza: {{ pokemon.strength }}</p>
        <p>Tipo: {{ pokemon.pokeplantilla.type }}</p>
    </div>

    <div class="buttons-container">
        <a href="{{ path('app_pokemon_capture', {'id': pokemon.id}) }}" class="btn btn-capture">¡Capturar!</a>
        <a href="{{ path('app_pokemons_available') }}" class="btn btn-skip">Buscar otro</a>
        <a href="{{ path('app_main') }}" class="btn btn-skip">Volver al inicio</a>
    </div>
</div>
{% endblock %}
