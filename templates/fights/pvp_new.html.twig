{% extends 'base.html.twig' %}

{% block title %}Nuevo Combate PvP{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }
    .pvp-form {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .form-group {
        margin-bottom: 20px;
    }
    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
    }
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
        background-color: #f9f9f9;
    }
    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
        border: 2px solid #0056b3;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: 2px solid #5a6268;
        display: inline-block;
        text-align: center;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>

<h1 style="text-align: center;">Desafiar a otro Entrenador</h1>

<form method="post" class="pvp-form">
    <div class="form-group">
        <label>Elige tu Pokémon:</label>
        <select name="pokeuser_id" required>
            {% for pokemon in user_pokemons %}
                <option value="{{ pokemon.id }}">
                    {{ pokemon.pokeplantilla.name }} 
                    (Nivel: {{ pokemon.level }}, Fuerza: {{ pokemon.strength }})
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label>Elige el entrenador rival:</label>
        <select name="target_trainer_id" required>
            {% for trainer in other_trainers %}
                <option value="{{ trainer.id }}">
                    {{ trainer.username }} 
                    (Pokémon activos: {{ trainer.pokemons|filter(p => p.state == 1)|length }})
                </option>
            {% endfor %}
        </select>
    </div>

    <div style="text-align: center;">
        <button type="submit" class="btn btn-primary">¡Desafiar!</button>
        <a href="{{ path('app_fights_index') }}" class="btn btn-secondary">Volver</a>
    </div>
</form>

{% endblock %}
