{% extends 'base.html.twig' %}

{% block title %}Historial de Combates{% endblock %}

{% block body %}
    <h1>Historial de Combates</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pokémon Usuario</th>
                <th>Pokémon Enemigo</th>
                <th>Resultado</th>
            </tr>
        </thead>
        <tbody>
        {% for fight in fights %}
            <tr>
                <td>{{ fight.id }}</td>
                <td>{{ fight.pokeuser.pokeplantilla.name }} (Nivel: {{ fight.pokeuser.level }})</td>
                <td>{{ fight.pokenemy.pokeplantilla.name }} (Nivel: {{ fight.pokenemy.level }})</td>
                <td>
                    {% if fight.result == 1 %}
                        Victoria
                    {% elseif fight.result == 2 %}
                        Derrota
                    {% else %}
                        Empate
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay registros de combates</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fights_new') }}" class="btn btn-primary">Nuevo Combate</a>
    <a href="{{ path('app_main') }}" class="btn btn-secondary">Volver al inicio</a>
{% endblock %}
