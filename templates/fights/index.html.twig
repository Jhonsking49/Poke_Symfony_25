{% extends 'base.html.twig' %}

{% block title %}Combates Pokémon{% endblock %}

{% block body %}
    <h1>Combates Pokémon</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="fight-buttons">
        <a href="{{ path('app_fights_new') }}" class="btn btn-primary">Nuevo Combate vs CPU</a>
        <a href="{{ path('app_fights_pvp_new') }}" class="btn btn-danger">Luchar contra Entrenador</a>
        <a href="{{ path('app_fights_pending') }}" class="btn btn-warning">
            Partidas Disponibles
            {% if pending_challenges > 0 %}
                <span class="badge">{{ pending_challenges }}</span>
            {% endif %}
        </a>
    </div>

    <h2>Historial de Combates</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pokémon Usuario</th>
                <th>Pokémon Enemigo</th>
                <th>Resultado</th>
            </tr>
        </thead>
        <tbody>
        {% for fight in fights %}
            <tr>
                <td>{{ fight.id }}</td>
                <td>{{ fight.pokeuser.pokeplantilla.name }} (Nivel: {{ fight.pokeuser.level }})</td>
                <td>{{ fight.pokenemy.pokeplantilla.name }} (Nivel: {{ fight.pokenemy.level }})</td>
                <td>
                    {% if fight.result == 1 %}
                        Victoria
                    {% elseif fight.result == 2 %}
                        Derrota
                    {% else %}
                        Empate
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay registros de combates</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_main') }}" class="btn btn-secondary">Volver al inicio</a>

    <style>
        .fight-buttons {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }
        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .btn-warning {
            background-color: #ffc107;
            color: black;
        }
        .badge {
            background-color: red;
            color: white;
            padding: 2px 6px;
            border-radius: 50%;
            margin-left: 5px;
        }
    </style>
{% endblock %}
