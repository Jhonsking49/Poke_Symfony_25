{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    body { 
        background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px/1.5 sans-serif;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px; 
    }
    .btn{
        margin: 10px;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-block;
    }
    .btn-primary{
        background-color: #4CAF50;
        color: white;
        border: 2px solid #45a049;
    }
    .btn-primary:hover {
        background-color: #45a049;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .buttons-container {
        display: flex;
        gap: 10px;
    }
    .pokemon-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .pokemon-card {
        background-color: white;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .pokemon-card:hover {
        transform: translateY(-5px);
    }

    .pokemon-image {
        width: 120px;
        height: 120px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .pokemon-info {
        margin-bottom: 15px;
    }

    .pokemon-info h3 {
        margin: 5px 0;
        color: #333;
        text-transform: capitalize;
    }

    .pokemon-stats {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 15px;
    }

    .stat {
        background-color: #f5f5f5;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.9em;
    }

    .card-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-capture {
        background-color: #FF5722;
        color: white;
        border: 2px solid #F4511E;
    }

    .btn-train {
        background-color: #2196F3;
        color: white;
        border: 2px solid #1976D2;
    }

    .btn-capture:hover, .btn-train:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .btn-evolve {
        background-color: #ff6b6b;
        color: white;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        margin-left: 8px;
    }

    .btn-evolve:hover {
        background-color: #ff5252;
    }
</style>

<div class="example-wrapper">
    <div class="header-container">
        <h1>Poke Symfony 25</h1>
        <div class="buttons-container">
            {% if app.user %}
                <h4>{{ app.user.username }}</h4>
                <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
                <a href="{{ path('app_pokemons_available') }}" class="btn btn-primary">Capturar Pokémon</a>
                <a href="{{ path('app_fights_new') }}" class="btn btn-train">Nueva lucha</a>
                <a href="{{ path('app_fights_user_history') }}" class="btn btn-primary">Mi Historial</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                <a href="{{ path('app_register') }}" class="btn btn-primary">Register</a>
            {% endif %}
        </div>
    </div>

    <div class="pokemon-grid">
        {% for pokemon in pokemons %}
            <div class="pokemon-card">
                <img src="{{ pokemon.pokeplantilla.img }}" alt="{{ pokemon.pokeplantilla.name }}" class="pokemon-image">
                <div class="pokemon-info">
                    <h3>{{ pokemon.pokeplantilla.name }}</h3>
                    <div class="pokemon-stats">
                        <span class="stat">Nivel: {{ pokemon.level }}</span>
                        <span class="stat">Fuerza: {{ pokemon.strength }}</span>
                    </div>
                    <div class="card-buttons">
                        <a href="{{ path('app_pokemon_train', {'id': pokemon.id}) }}" 
                           class="btn btn-train" 
                           {% if pokemon.state == 0 %}disabled{% endif %}>
                            Entrenar
                        </a>
                        {% if pokemon.level >= 10 and pokemon.pokeplantilla.evolution %}
                            <a href="{{ path('app_pokemon_evolve', {'id': pokemon.id}) }}" 
                               class="btn btn-evolve">
                                Evolucionar
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p>No hay pokémons disponibles.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
